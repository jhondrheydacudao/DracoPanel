<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %></title>
    
    <% if (logo) { %>
        <link rel="icon" href="/assets/logo.png" type="image/x-icon">
    <% } %>

    <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
    
    <!-- Custom Font -->
    <link rel="preload" href="/assets/Ndot-55.otf" as="font" type="font/otf" crossorigin="anonymous">
    
    <style>
        /* Background Gradient */
        body {
            background: linear-gradient(to bottom, #1a1a1a, #0f0f0f);
            color: #e0e0e0;
            font-family: 'Inter', sans-serif;
        }

        /* Sidebar */
        .sidebar {
            background: rgba(30, 30, 30, 0.8);
            backdrop-filter: blur(10px);
            transition: transform 0.3s ease-in-out;
        }

        /* Sidebar Hover Effect */
        .sidebar a {
            transition: background 0.2s, transform 0.2s;
        }

        .sidebar a:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }

        /* Header */
        .header {
            background: rgba(25, 25, 25, 0.8);
            backdrop-filter: blur(8px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            padding: 12px 20px;
        }

        /* Loading Bar */
        .loading-bar {
            height: 2px;
            background: linear-gradient(to right, #ff6a00, #ffbb00);
            position: fixed;
            bottom: 0;
            left: 0;
            animation: loading 0.8s ease-in-out;
        }

        @keyframes loading {
            0% { width: 0%; }
            100% { width: 100%; }
        }

        /* Spinner */
        .spinner {
            position: fixed;
            bottom: 20px;
            right: 20px;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>

<body x-data="{ sidebarOpen: false }">

    <!-- Loading Bar -->
    <div class="loading-bar"></div>

    <!-- Sidebar -->
    <aside class="sidebar fixed inset-0 transform transition-all md:translate-x-0 md:static md:w-64 h-screen border-r border-gray-800"
           :class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'">
        <div class="flex flex-col h-full p-4">
            
            <!-- Sidebar Header -->
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-lg font-semibold">ExecutorX</h2>
                <button class="md:hidden text-gray-400 hover:text-white" @click="sidebarOpen = false">
                    âœ–
                </button>
            </div>

            <!-- Sidebar Links -->
            <nav>
                <a href="../instances" class="block px-4 py-2 rounded-md hover:bg-gray-700">
                    ðŸ“‚ Instances
                </a>
                <a href="../account" class="block px-4 py-2 rounded-md hover:bg-gray-700">
                    ðŸ”§ Account
                </a>
                <% if (req.user.admin === true) { %>
                    <a href="/admin/overview" class="block px-4 py-2 rounded-md hover:bg-gray-700">
                        ðŸ›  Admin
                    </a>
                <% } %>
            </nav>

            <!-- Logout Button -->
            <a href="/logout" class="block mt-auto px-4 py-2 text-red-400 hover:bg-gray-700 rounded-md">
                ðŸšª Logout
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        
        <!-- Header -->
        <header class="header flex justify-between items-center">
            <button class="md:hidden text-white" @click="sidebarOpen = !sidebarOpen">â˜°</button>
            <div class="flex items-center space-x-4">
                <div x-data="{ open: false }" class="relative">
                    <button @click="open = !open" class="flex items-center px-4 py-2 rounded-lg bg-gray-800 hover:bg-gray-700 transition">
                        <span class="font-medium"><%= user.username %></span>
                        ðŸ”½
                    </button>
                    <div x-show="open" x-transition 
                         class="absolute right-0 mt-2 w-48 bg-gray-900 rounded-md shadow-lg">
                        <a href="/account" class="block px-4 py-2 hover:bg-gray-700">Account</a>
                        <a href="/auth/login" class="block px-4 py-2 hover:bg-gray-700">Logout</a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="p-6">
            <h1 class="text-2xl font-semibold">Welcome to ExecutorX</h1>
            <p class="text-gray-400">Manage your servers with ease.</p>
        </main>
    </div>

    <!-- Hide Loading Elements After Animation -->
    <script>
        setTimeout(() => {
            document.querySelector('.loading-bar').style.display = 'none';
        }, 800);
    </script>
</body>
</html>
