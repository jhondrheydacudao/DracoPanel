<script src="https://cdn.tailwindcss.com"></script>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= name %> - 404 Not Found</title>

<!-- Favicon -->
<link rel="icon" type="image/png" href="https://yt3.googleusercontent.com/IVqzx0L3Ffpapttg-WK5yU9frk4AIVKixHnmmQjQ7RLrt4e66-7Ox6srKG_QVat5ceEq-98-s9s=s160-c-k-c0x00ffffff-no-rj">

<!-- Tailwind CSS -->
<script src="https://cdn.tailwindcss.com"></script>

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<meta name="description" content="404 Page Not Found">
<meta name="robots" content="noindex, nofollow">

<!-- Custom CSS for animation -->
<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animated-text {
    animation: fadeIn 3s ease-in-out;
  }

  .hover-grow:hover {
    transform: scale(1.05);
  }

  .button-blue {
    background-color: #007BFF;
  }

  .button-red {
    background-color: #DC3545;
  }

  .button-green {
    background-color: #28A745;
  }
</style>
</head>
<body style="font-family: 'IBM Plex Sans', sans-serif;" class="bg-gradient-to-br from-[#1a1a1a] to-[#121212] h-full text-white">

<div class="flex items-center justify-center min-h-screen px-6 py-8">
  <div class="text-center max-w-lg">
    <!-- Large 404 Text with animation -->
    <h1 class="text-8xl lg:text-9xl font-extrabold tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-gray-300 to-gray-500 animated-text">404</h1>
    
    <!-- Subtitle -->
    <p class="mt-4 text-2xl lg:text-3xl font-semibold">Oops! Page not found.</p>
    <p class="mt-2 text-lg text-neutral-400">The page you're looking for doesn't exist or has been moved.</p>

    <!-- Buttons with new colors and hover effects -->
    <div class="mt-6">
      <a href="../" class="inline-block px-6 py-3 text-white button-blue hover:bg-blue-700 rounded-lg text-lg font-medium shadow-lg transition duration-300 ease-in-out transform hover-grow">
        â¬… Back to <%= name %>
      </a>
      <a href="/dashboard" class="inline-block px-6 py-3 text-white button-red hover:bg-red-700 rounded-lg text-lg font-medium shadow-lg transition duration-300 ease-in-out transform hover-grow">
        Home
      </a>
      <!-- Discord URL invite -->
      <a href="https://discord.gg/UpsVZg5S27" class="inline-block px-6 py-3 text-white button-green hover:bg-green-700 rounded-lg text-lg font-medium shadow-lg transition duration-300 ease-in-out transform hover-grow">
        Contact Us
      </a>
    </div>
  </div>   
</div>

</body>
</html>
